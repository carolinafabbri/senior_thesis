%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=2, shrink-to-fit=no", :name => "viewport"}/
    %link{:crossorigin => "anonymous", :href => "https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css", :integrity => "sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2", :rel => "stylesheet"}/
    /name of the page in open tab
    %title Fort Wayne Local's
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    #wrapper.d-flex
      / Sidebar

      .d-flex.flex-column.flex-shrink-0.p-3.text-white.bg-dark{:style => "width: 280px;"}
        %a.d-flex.align-items-center.mb-3.mb-md-0.me-md-auto.text-white.text-decoration-none{:href => "/"}
          %svg.bi.me-2{:height => "32", :width => "40"}
            %use{"xlink:href" => "#bootstrap"}
          %span.fs-4 Fort Wayne Locals
        %hr/
        %ul.nav.nav-pills.flex-column.mb-auto.flex-grow-0
          %li.nav-item
            = link_to "Coffee Shops", places_path(filter: "coffee"), class: "#{'active' if @filter == "coffee" } nav-link text-white"
          %li
            = link_to "Food", places_path(filter: "food"), class: "#{'active' if @filter == "food" } nav-link text-white"
          %li
            = link_to "Clothing", places_path(filter: "clothing"), class: "#{'active' if @filter == "clothing" } nav-link text-white"
          %li
            = link_to "Foreign", places_path(filter: "foreign"), class: "#{'active' if @filter == "foreign" } nav-link text-white"
          %li
            = link_to "Candy", places_path(filter: "candy"), class: "#{'active' if @filter == "candy" } nav-link text-white"
        %hr/
      -# #sidebar-wrapper
        -# .nav.navbar.navbar-expand-lg.navbar-light.bg-dark.border-bottom.md-3 Fort Wayne Local's
        -# .list-group.list-group-flush.align-items
      / Page content wrapper
      #page-content-wrapper.w-100
        / Top navigation
        %nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.border-bottom
          .container-fluid.md-3
            #navbarSupportedContent.collapse.navbar-collapse
              %ul.navbar-nav.ms-auto.mt-2.mt-lg-2
                %li.nav-item
                  %a.nav-link{:href => "#!"} Home
                %li.nav-item
                  %a.nav-link{:href => "/home"} About Us
            %form.form-inline.my-2.my-lg-0
              %input.form-control.mr-sm-2{:placeholder => "Search", :type => "search"}/
              %button.btn.btn-primary{:type => "submit"} Search
          .col-md-3.text-right
            - if current_user.present?
              = link_to "Sign-out", destroy_user_session_path, method: :delete, class: "btn btn-outline-primary me-2"
            - else
              = link_to "Login", new_user_session_path, class: "btn btn-outline-primary me-2"

              = link_to "Sign-up", new_user_registration_path, class: "btn btn-primary"
            //where do I add the link_to ^ here? link_to registrations_new_path?
        / Page content
        .container-fluid.w-100
          = yield
    / Bootstrap core JS
    -# %script{:src => "https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"}
    %script{:crossorigin => "anonymous", :integrity => "sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj", :src => "https://code.jquery.com/jquery-3.5.1.slim.min.js"}
      %script{:crossorigin => "anonymous", :integrity => "sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx", :src => "https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"}
