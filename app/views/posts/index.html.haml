.row.mt-4
  .col-8
    %p#notice= notice
    %h1 Listing Posts
    - @posts.each do |post|
      .card.my-2
        .card-header
          - post.tags.each do |tag|
            %span.badge.badge-primary= tag.name
        .card-body
          %h5.card-title= post.title
          %p.card-text= truncate(post.body, length: 50)
          = link_to 'Show', post_path(post), class: 'card-link'
          = link_to 'Edit', edit_post_path(post), class: 'card-link'
          = link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'card-link'
    %br/
    = link_to 'New Post', new_post_path, class: 'btn btn-primary'

  .col-4
    = render 'sidebar_cards'
